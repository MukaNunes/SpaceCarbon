<theme>
    <variant name="normal-carousel, colored-carousel">
        <view name="system">
            <image name="controller">
                <pos>0.35 0.52</pos>
                <maxSize>0.5 0.5</maxSize>
                <origin>0.5 0.5</origin>
            </image>

            <text name="gameCounter">
                <pos>.015 .9</pos>
                <horizontalAlignment>center</horizontalAlignment>
            </text>

            <carousel name="systemSelector">
                <type>verticalWheel</type>
                <itemRotationOrigin>5 0.5</itemRotationOrigin>
                <pos>.7 0</pos>
                <size>.3 1</size>
                <itemSize>0.2 0.2</itemSize>
                <itemRotation>-6.5</itemRotation>
                <itemScale>1.3</itemScale>
                <itemHorizontalAlignment>center</itemHorizontalAlignment>
                <staticImage>${systemLogo}</staticImage>
                <color>${bgColor}</color>
                <zIndex>75</zIndex>
            </carousel>
        </view>
    </variant>
</theme>